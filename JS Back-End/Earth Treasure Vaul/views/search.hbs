<main class="search">
  <!-- Search Page (Only for logged-in users) -->
  <section id="search">
    <h2>Search by Name</h2>

    <form class="search-wrapper cf" method="get">
      <input id="#search-input" type="text" name="name" placeholder="Search here..." required />
      <button type="submit">Search</button>
    </form>

    <div id="search-container">
      <ul class="card-wrapper">
        <!-- Display a li with information about every post (if any)-->
        {{#each stones}}
        <li class="card">
          <img src="{{imageUrl}}" />
          <p><strong>Name: </strong><span class="name">{{name}}</span></p>
          <p><strong>Category: </strong><span class="category">{{category}}</span></p>
          <p><strong>Formula:</strong><span class="formula">{{formula}}</span></p>
          <a class="details-btn" href="/details/{{_id}}">Details</a>
        </li>
      </ul>
        {{else}}
      <!-- Display an h2 if there are no posts -->
          <div id="no-post">
             <h2>There are no results found.</h2>
          </div>
    </div>
      {{/each}}
  </section>
</main>
